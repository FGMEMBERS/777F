<PropertyList>

    <path>gear-ctl.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>AutoBrake.knob</object-name>
        <object-name>Abrake.001</object-name>
        <property>/autopilot/autobrake/step</property>
        <interpolation>
            <entry>
                <ind>-2</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>59</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>91</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>120.0</dep>
            </entry>
            <entry>
                <ind>2</ind>
                <dep>150.0</dep>
            </entry>
            <entry>
                <ind>3</ind>
                <dep>180.0</dep>
            </entry>
            <entry>
                <ind>4</ind>
                <dep>206.0</dep>
            </entry>
            <entry>
                <ind>5</ind>
                <dep>237.0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>-0.012</y-m>
            <z-m>-0.102</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>GearLever</object-name>
        <property>controls/gear/gear-down</property>
        <factor>30</factor>
        <center>
            <x-m>-0.035</x-m>
            <y-m>0</y-m>
            <z-m>0.015</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>GS.ovride.001</object-name>
        <condition>
	    <and>
                <property>instrumentation/mk-viii/inputs/discretes/glideslope-inhibit</property>
                <not-equals>
                    <property>/systems/electrical/outputs/mk-viii</property>
                    <value>0</value>
                </not-equals>
                <not>
                    <or>
                        <property>instrumentation/mk-viii/outputs/discretes/gpws-warning</property>
                        <property>instrumentation/mk-viii/outputs/discretes/gpws-alert</property>
                        <property>instrumentation/mk-viii/outputs/discretes/gpws-inop</property>
                    </or>
                </not>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Ground.prox.001</object-name>
        <condition>
            <and>
                <or>
                    <property>instrumentation/mk-viii/outputs/discretes/gpws-warning</property>
                    <property>instrumentation/mk-viii/outputs/discretes/gpws-alert</property>
                    <property>instrumentation/mk-viii/outputs/discretes/gpws-inop</property>
                </or>
                <not-equals>
                    <property>/systems/electrical/outputs/mk-viii</property>
                    <value>0</value>
                </not-equals>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Flap.ovride.001</object-name>
        <condition>
            <property>instrumentation/mk-viii/outputs/discretes/flap-override</property>
        </condition>
    </animation>

<!-- OSG hotspots -->

    <!-- G/S INHIBIT button -->
    <animation>
        <type>pick</type>
        <object-name>GS.ovride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                  b777.Gpws.clicked_gs_override();
                  b777.Gpws.press_selftest_button();
                </script>
            </binding>
            <mod-up>
              <binding>
                <command>nasal</command>
                <script>
                  b777.Gpws.release_selftest_button();
                </script>
              </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GS.ovride</object-name>
        <action>
            <button>1</button> <!-- middle button to simulate long push-button press... -->
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>b777.Gpws.clicked_selftest();</script>
            </binding>
        </action>
    </animation>

    <!-- FLAP OVERRIDE button -->
    <animation>
        <type>pick</type>
        <object-name>Flap.ovride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>b777.Gpws.clicked_flap_override();</script>
            </binding>
        </action>
    </animation>

    <!-- GEAR OVERRIDE button -->
    <animation>
        <type>pick</type>
        <object-name>Gear.ovride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>b777.Gpws.clicked_gear_override();</script>
            </binding>
        </action>
    </animation>

    <!-- TERRAIN INHIBIT button -->
    <animation>
        <type>pick</type>
        <object-name>Terrain.inhibit</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>b777.Gpws.clicked_terrain_inhibit();</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GearLever</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>nasal</command>
                <script>controls.gearDown(-1)</script>
            </binding>
            <mod-up>
                <binding>
                    <command>nasal</command>
                    <script>controls.gearDown(0)</script>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GearLever</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>controls.gearDown(1)</script>
            </binding>
            <mod-up>
                <binding>
                    <command>nasal</command>
                    <script>controls.gearDown(0)</script>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AutoBrake.knob</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-adjust</command>
                <property>/autopilot/autobrake/step</property>
                <step>1</step>
                <min>-2</min>
                <max>5</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AutoBrake.knob</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>property-adjust</command>
                <property>/autopilot/autobrake/step</property>
                <step>-1</step>
                <min>-2</min>
                <max>5</max>
            </binding>
        </action>
    </animation>

</PropertyList>
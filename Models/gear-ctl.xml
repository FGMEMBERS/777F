    <animation>
        <type>select</type>
        <object-name>Gear.ovride.001</object-name>
        <condition>
            <and>
                <property>instrumentation/mk-viii/inputs/discretes/gear-override</property>
                <not-equals>
                    <property>/systems/electrical/outputs/mk-viii</property>
                    <value>0</value>
                </not-equals>
            </and>
        </condition>
    </animation>
